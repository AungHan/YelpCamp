<%- include("../partials/home") %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center">Create a new campground</h1>
        <div style="width:30%;margin:40px auto;">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="campName" placeholder="Name" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="campImage" placeholder="Image URL" required>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="campDescription" placeholder="Description" required>
                </div>
                <div class="form-group">
                    <input class="btn btn-lg btn-default btn-block btn-primary" type="submit">
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>
